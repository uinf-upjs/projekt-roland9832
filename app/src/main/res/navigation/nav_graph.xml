<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.guesstheword.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_alphabetFragment"
            app:destination="@id/alphabetFragment"
            app:argumentName="buttonId"
            app:argumentType="string" />
    </fragment>

    <fragment
        android:id="@+id/alphabetFragment"
        android:name="com.example.guesstheword.AlphabetFragment"
        android:label="fragment_alphabet"
        tools:layout="@layout/fragment_alphabet">
        <argument
            android:name="buttonId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/letterFragment"
        android:name="com.example.guesstheword.LetterFragment"
        android:label="fragment_letter"
        tools:layout="@layout/fragment_letter">
        <action
            android:id="@+id/action_letterFragment_to_alphabetFragment"
            app:destination="@id/alphabetFragment" />
    </fragment>
</navigation>
